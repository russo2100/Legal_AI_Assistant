# ===========================================
# LLM Провайдеры (с fallback-логикой)
# ===========================================

# Primary LLM provider (OpenRouter)
# Получите ключ на https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-YOUR_API_KEY_HERE
OPENROUTER_MODEL=arcee-ai/trinity-large-preview:free
OPENROUTER_RATE_LIMIT=0.5

# Fallback LLM provider (Perplexity)
# Получите ключ на https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-YOUR_API_KEY_HERE
PERPLEXITY_MODEL=sonar-large-online
PERPLEXITY_RATE_LIMIT=0.5

# ===========================================
# PostgreSQL с pgvector
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/yurik_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=yurik_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================================
# Настройки
# ===========================================

# Rate limiting для парсера kad.arbitr.ru (запросы в секунду)
KAD_RATE_LIMIT=0.5

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Дисклеймер
DISCLAIMER=Аналитическая подсказка. Требуется проверка юристом.
